# Copy to .env and fill values for production
MONGO_URI=your_mongodb_connection_string_here
PORT=5000
# Set to your frontend URL (e.g., https://your-domain.com)
CLIENT_ORIGIN=https://your-frontend-domain.com
ADMIN_TOKEN=replace_with_secure_token
JWT_SECRET=replace_with_strong_jwt_secret

# SMTP / Email settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password
OWNER_EMAIL=info@yourdomain.com
