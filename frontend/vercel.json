{
  "buildCommand": "npm run build",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://brainiax-website.onrender.com/api/:path*" },
    { "source": "/uploads/:path*", "destination": "https://brainiax-website.onrender.com/uploads/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
